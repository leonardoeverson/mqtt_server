  <body class="text-center">
    <form class="form-signin" method="post" action="/login" >
      <h1 class="h3 mb-3 font-weight-normal">Login</h1>
      <label for="inputEmail" class="sr-only">Email</label>
      <input id="inputEmail" class="form-control" placeholder="E-mail" name="email" required="" autofocus="" type="email">
      <label for="inputPassword" class="sr-only">Senha</label>
      <input id="inputPassword" class="form-control" placeholder="Senha" name="senha" required="" type="password">
      <div class="checkbox mb-3">
        <label>
          <input value="remember-me"type="checkbox"> Lembrar-me
        </label>
      </div>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Entrar</button>
      <p class="mt-5 mb-3 text-muted">
        <% if(typeof(validacao) != "undefined"){%>
            <div class="alert alert-danger" role="alert">
            <% for(var i = 0; i < validacao.length; i++){ %>
                <%= validacao[i].msg %>       
            <% } %>
            </div>
        <% }%>
      </p>
    </form>

    <a href="/password/change">Esqueci minha senha</a>
    <br>
    <br>
    <button class="btn btn-success" id="cadastro" type="button" style="width:150px ">Cadastre-se</button>

<script type="text/javascript">
  $("#cadastro").on('click',function(e){
      location.href = '/cadastro'
  })
</script>
